<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_screen_central_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_screen_central_menu_height"
        android:layout_marginStart="@dimen/main_screen_central_menu_margin"
        android:layout_marginEnd="@dimen/main_screen_central_menu_margin"
        android:background="@drawable/central_menu_shape"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_screen_up_menu"
        app:layout_constraintVertical_bias="0.49">

        <Button
            android:id="@+id/main_screen_central_menu_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/main_screen_central_menu_btn1"/>

        <Button
            android:id="@+id/main_screen_central_menu_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/main_screen_central_menu_btn2" />

        <Button
            android:id="@+id/main_screen_central_menu_button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/main_screen_central_menu_btn3" />

        <Button
            android:id="@+id/main_screen_central_menu_button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/main_screen_central_menu_btn4" />

        <Button
            android:id="@+id/main_screen_central_menu_button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/main_screen_central_menu_btn5" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/main_screen_up_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_screen_up_menu_height"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_screen_up_menu_color"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/main_screen_posters_width"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/lotr" />

            <ImageView
                android:layout_width="@dimen/main_screen_posters_width"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/mib" />

            <ImageView
                android:layout_width="@dimen/main_screen_posters_width"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/alita" />

            <ImageView
                android:layout_width="@dimen/main_screen_posters_width"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/thor" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autoLink="web"
        android:clickable="true"
        android:minHeight="48dp"
        android:text="@string/posters_source"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_screen_up_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>

